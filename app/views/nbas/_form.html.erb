  </div>

  <div>
    <%= form.label :filed_at, style: "display: block" %>
    <%= form.datetime_field :filed_at %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :deadline_option, style: "display: block" %>
